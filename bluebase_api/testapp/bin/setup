#!/usr/bin/env ruby
require 'pathname'

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../',  __FILE__)

Dir.chdir APP_ROOT do
  # This script is a starting point to setup your application.
  # Add necessary setup steps to this file:

  puts "== Installing dependencies =="
  system "gem install bundler --conservative"
  system "bundle check || bundle install"

  # puts "\n== Copying sample files =="
  # unless File.exist?("config/database.yml")
  #   system "cp config/database.yml.sample config/database.yml"
  # end

  puts "\n== Preparing database =="
  system "bin/rake db:setup"

  puts "\n== Removing old logs and tempfiles =="
  system "rm -f log/*"
  system "rm -rf tmp/cache"

  puts "\n== Restarting application server =="
  system "touch tmp/restart.txt"
end

# Set up the staging and production apps.
if heroku join --app testapp-staging &> /dev/null; then
  git remote add staging git@heroku.com:testapp-staging.git || true
  printf 'You are a collaborator on the "testapp-staging" Heroku app
'
else
  printf 'Ask for access to the "testapp-staging" Heroku app
'
fi

if heroku join --app testapp-production &> /dev/null; then
  git remote add production git@heroku.com:testapp-production.git || true
  printf 'You are a collaborator on the "testapp-production" Heroku app
'
else
  printf 'Ask for access to the "testapp-production" Heroku app
'
fi

# Sets Heroku env variables
figaro heroku:set -a testapp-production -e production
figaro heroku:set -a testapp-staging -e production

# Heroku addons for production
heroku addons:add mandrill --app testapp-production
heroku addons:add newrelic:stark --app testapp-production
heroku addons:add rollbar --app testapp-production
